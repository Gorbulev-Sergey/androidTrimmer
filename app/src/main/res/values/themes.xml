<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidTrimmer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/four</item>
        <!-- Customize your theme here. -->


        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.AndroidTrimmer.Violet" parent="Theme.AndroidTrimmer">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_purpul_blue</item>
        <item name="colorPrimaryVariant">@color/gray_purpul_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purpul_blue</item>
        <item name="colorSecondaryVariant">@color/purpul_blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="colorTertiary">@color/violet</item>
        <item name="colorOnTertiary">@color/white</item>

        <item name="colorAccent">@color/rouse</item>
    </style>

    <style name="Theme.AndroidTrimmer.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Theme.AndroidTrimmer.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Theme.AndroidTrimmer.Picker.Purpul" parent="Theme.AndroidTrimmer.Picker" >
        <item name="android:textColorPrimary">@color/purpul_blue</item>
        <item name="colorControlNormal">@color/purpul_blue</item>
    </style>

    <style name="Theme.AndroidTrimmer.Picker.Orange" parent="Theme.AndroidTrimmer.Picker" >
        <item name="android:textColorPrimary">@color/four</item>
        <item name="colorControlNormal">@color/four</item>
    </style>

</resources>